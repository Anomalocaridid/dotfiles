{ pkgs, ... }: {
  # Enable tuigreet display manager
  # Replace with Ly when people get it working
  services.greetd = {
    enable = true;
    settings = {
      default_session = {
        command = "${pkgs.greetd.tuigreet}/bin/tuigreet --time --cmd Hyprland";
        user = "greeter";
      };
    };
  };
}
